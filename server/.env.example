# Environment
DEBUG=False
ENVIRONMENT=development

# Server settings
PORT=3000
HOST=0.0.0.0

# SQLite settings
SQLITE_DB_PATH=./microtrax.db

# JWT settings
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=1d

# Admin user
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=adminPassword123
ADMIN_NAME=Admin User

# CORS settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Steam API
STEAM_API_KEY=your_steam_api_key_here
STEAM_PUBLISHER_KEY=your_steam_publisher_key_here
STEAM_APP_ID=your_steam_app_id_here

# Notification Settings
# Email notification settings
EMAIL_NOTIFICATIONS_ENABLED=False
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_smtp_username
EMAIL_SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@microtrax.example.com
EMAIL_USE_TLS=True

# Push notification settings
PUSH_NOTIFICATIONS_ENABLED=False
FCM_API_KEY=your_fcm_api_key_here

# Web notification settings
WEB_NOTIFICATIONS_ENABLED=False
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here